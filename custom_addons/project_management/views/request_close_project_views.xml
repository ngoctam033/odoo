<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Request Close Project Form View -->
    <record id="view_request_close_project_form" model="ir.ui.view">
        <field name="name">request.close.project.form</field>
        <field name="model">request.close.project</field>
        <field name="arch" type="xml">
            <form string="Request Close Project">
                <sheet>
                    <group>
                        <field name="request_code"/>
                        <field name="project_id"/>
                        <field name="pm_id"/>
                        <field name="end_date"/>
                        <field name="close_reason"/>
                        <field name="state"/>
                        <field name="cancel_reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Request Close Project Tree View -->
    <record id="view_request_close_project_tree" model="ir.ui.view">
        <field name="name">request.close.project.tree</field>
        <field name="model">request.close.project</field>
        <field name="arch" type="xml">
            <tree string="Request Close Projects">
                <field name="request_code"/>
                <field name="project_id"/>
                <field name="pm_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Request Close Project Action -->
    <record id="action_request_close_project" model="ir.actions.act_window">
        <field name="name">Request Close Projects</field>
        <field name="res_model">request.close.project</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Request Close Project Menu Item -->
    <menuitem id="menu_request_close_project" name="Request Close Projects" parent="menu_project_management_root" action="action_request_close_project" sequence="60"/>
</odoo>