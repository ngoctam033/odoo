<?xml version="1.0" encoding="utf-8"?>

<!-- views/project_management_views.xml -->
<odoo>
    <!-- Form View -->
    <record id="view_project_management_form" model="ir.ui.view">
        <field name="name">project.management.form</field>
        <field name="model">project.management</field>
        <field name="arch" type="xml">
            <form string="Project Management">
                <sheet>
                    <group>
                        <field name="project_code"/>
                        <field name="name"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Dates">
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </page>
                        <page string="Team">
                            <group>
                                <field name="project_manager"/>
                                <field name="developer_ids"/>
                                <field name="qc_ids"/>
                            </group>
                        </page>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                            </group>
                        </page>
                        <page string="Sprints">
                            <field name="sprint_ids">
                                <tree string="Sprints">
                                    <field name="sprint_code"/>
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state"/>
                                </tree>
                                <form string="Sprint">
                                    <group>
                                        <field name="sprint_code"/>
                                        <field name="name"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="state"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_project_management_tree" model="ir.ui.view">
        <field name="name">project.management.tree</field>
        <field name="model">project.management</field>
        <field name="arch" type="xml">
            <tree string="Project Management">
                <field name="project_code"/>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
                <field name="project_manager"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_project_management" model="ir.actions.act_window">
        <field name="name">Project Management</field>
        <field name="res_model">project.management</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_project_management_tree"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_project_management_root" name="Project Management" sequence="10"/>
    <menuitem id="menu_project_management" name="Projects" parent="menu_project_management_root" action="action_project_management" sequence="20"/>
</odoo>